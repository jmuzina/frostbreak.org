---
import BaseLayout from "../layouts/BaseLayout.astro";
const title = "Frostbreak Discord Server";
const description = "Join our discord server";
const { PUBLIC_DISCORD_INVITE_LINK } = import.meta.env;
---
<BaseLayout title={{text: title}} description={description}>
    <section class="section">
        <p>Redirecting to our Discord server.</p>
        <p>Click <a href={PUBLIC_DISCORD_INVITE_LINK}>here</a> if you are not redirected.</p>
        <noscript>
            <p>
              Your browser does not support JavaScript or you have disabled JavaScript.
              Please click the link above to join our Discord server.
            </p>
        </noscript>
    </section>
</BaseLayout>

<script is:inline define:vars={{PUBLIC_DISCORD_INVITE_LINK}}>
  window.location.href = `${PUBLIC_DISCORD_INVITE_LINK}`;
</script>