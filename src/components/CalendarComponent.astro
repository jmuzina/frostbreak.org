---
const {PUBLIC_GCAL_ID, PUBLIC_GCAL_TZ_ID} = import.meta.env;
interface Props {
  mode?: "AGENDA" | "WEEK" | "MONTH"
  height?: number
}

const { mode = "MONTH", height = 500 } = Astro.props;
const GCAL_EMBED_LINK = `https://calendar.google.com/calendar/embed?mode=${mode}&src=${PUBLIC_GCAL_ID}%40group.calendar.google.com&ctz=${PUBLIC_GCAL_TZ_ID};`
---
<iframe src={GCAL_EMBED_LINK} style="border: 0" width="100%" height={height} frameborder="0" scrolling="no"></iframe>